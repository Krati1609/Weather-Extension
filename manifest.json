{
  "manifest_version": 3,
  "name": "My Weather Extension",
  "version": "1.0",
  "description": "Get instant weather updates with beautiful animations",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "geolocation",
    "storage"
  ],
  "host_permissions": [
    "https://api.weatherapi.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}